<div class="center"><img src="../images/restaurant.jpg" alt="restaurant"></div>

<!-- Loop over each object in the projects array -->
{{#each entrees as |entree| }}
<div class="row mb-4 project">
  <div class="col-md-5">
      
  </div>
  <div class="col-md-7">
    <p>
      <h2>{{entree.name}} - ${{entree.price}}</h2>
      <img src="{{entree.image}}" alt="{{entree.name}}" width="200" height="200">
      </br></br>{{entree.description}}
    </p>
  </div>
</div>
{{/each}}

